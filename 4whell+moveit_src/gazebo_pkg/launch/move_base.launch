<?xml version="1.0"?>
<launch>
  <!-- Arguments -->
  <arg name="cmd_vel_topic" default="/cmd_vel" />
  <arg name="odom_topic" default="/odom" />
  <arg name="move_forward_only" default="false"/>


  <!-- move_base -->
  <node pkg="move_base" type="move_base" respawn="false" name="move_base" output="screen">
    
    <rosparam file="$(find gazebo_pkg)/params/costmap_common_params.yaml" command="load" ns="global_costmap" />
    <rosparam file="$(find gazebo_pkg)/params/costmap_common_params.yaml" command="load" ns="local_costmap" />
    <rosparam file="$(find gazebo_pkg)/params/local_costmap_params.yaml" command="load" />
    <rosparam file="$(find gazebo_pkg)/params/global_costmap_params.yaml" command="load" />
    
    <rosparam file="$(find gazebo_pkg)/params/move_base_params.yaml" command="load" />
    <rosparam file="$(find gazebo_pkg)/params/base_global_planner_params.yaml" command="load" />
    <!--rosparam file="$(find gazebo_pkg)/params/dwa_local_planner_params.yaml" command="load" /-->
    <rosparam file="$(find gazebo_pkg)/params/teb_local_planner_params.yaml" command="load" />
    
    <remap from="cmd_vel" to="$(arg cmd_vel_topic)"/>
    <remap from="odom" to="$(arg odom_topic)"/>
  </node>

</launch>
